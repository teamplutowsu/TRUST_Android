<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"

    tools:context="edu.wsu.eecs.pluto.trust.SettingsActivity">

        <ListView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="70dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settingsListView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_view_front"
            android:textColor="#040404" />

    <TextView
        android:text="Version/UserID"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:textSize="23sp"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#38383B"
        android:id="@+id/VersionUIDTextBox"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
