<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageButton android:src="@drawable/ic_bookmark_red_36dp"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:id="@+id/bookmark"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/action_prev"
        android:layout_alignBottom="@+id/action_prev" />

    <ImageButton android:src="@drawable/table_of_contents"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:id="@+id/tableOfContents"
        android:layout_toRightOf="@+id/bookmark"
        android:layout_toLeftOf="@+id/TTS"
        android:layout_alignParentTop="true"/>

    <ImageButton android:src="@drawable/ic_chevron_right_white_48dp"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:id="@+id/action_next"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <ImageButton android:src="@drawable/speaker_white"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="fitCenter"
        android:id="@+id/TTS"
        android:layout_toLeftOf="@+id/action_next"
        android:layout_alignParentTop="true"/>

    <ImageButton android:src="@drawable/ic_chevron_left_white_48dp"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:id="@+id/action_prev"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>